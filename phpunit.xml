<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
    <!-- Ключ приложения для тестов -->
    <server name="APP_KEY" value="base64:4EL6LkfJp17sxXVTqOX+kau/d/luqqCxlsWiw2Bq2ZI="/>

    <!-- Тестовое окружение -->
    <server name="APP_ENV" value="testing"/>
    <server name="APP_MAINTENANCE_DRIVER" value="file"/>

    <!-- Быстрые хэши, синхронные очереди и память для сессий/кеша -->
    <server name="BCRYPT_ROUNDS" value="4"/>
    <server name="CACHE_STORE" value="array"/>
    <server name="QUEUE_CONNECTION" value="sync"/>
    <server name="SESSION_DRIVER" value="array"/>

    <!-- ВАЖНО: один и тот же файл БД для всех HTTP-запросов теста -->
    <server name="DB_CONNECTION" value="sqlite"/>
    <server name="DB_DATABASE" value="database/testing.sqlite"/>
    <server name="DB_FOREIGN_KEYS" value="true"/>

    <!-- Отключаем «тяжёлые» тулзы в тестах -->
    <server name="MAIL_MAILER" value="array"/>
    <server name="PULSE_ENABLED" value="false"/>
    <server name="TELESCOPE_ENABLED" value="false"/>
    <server name="NIGHTWATCH_ENABLED" value="false"/>
</php>

</phpunit>
